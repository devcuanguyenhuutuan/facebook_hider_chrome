{
    "manifest_version": 3,
    "name": "Facebook News Feed Hider",
    "version": "1.0",
    "description": "Hide the Facebook news feed.",
    "permissions": [
        "activeTab",
        "https://www.facebook.com/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://www.facebook.com/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}